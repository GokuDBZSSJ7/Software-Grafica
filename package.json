{
  "name": "grafica",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main.js --watch preload.js --watch public --ext js,json,html,css --exec \"cross-env NODE_ENV=development electron .\"",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.grafica.app",
    "productName": "Sistema da Gr√°fica",
    "files": [
      "main.js",
      "preload.js",
      "db/**/*",
      "public/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "grafica.db",
        "to": "grafica.db"
      },
      {
        "from": "logo.png",
        "to": "logo.png"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    }
  },
  "dependencies": {
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^5.0.2",
    "sqlite3": "^5.1.7",
    "sweetalert2": "^11.22.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8"
  }
}